<h3><%=h code.text %></h3>

<% unless defined?(simple) && simple %>
  <p>
    <b>Size:</b>
    <%=h code.size %>
  </p>

  <p>
    <b>Level:</b>
    <%=h code.level %>
  </p>
<% end %>

<table class="qrcode">
  <% code.qrcode.modules.each_index do |x| %>
    <tr>  
      <% code.qrcode.modules.each_index do |y| %>
        <% if code.qrcode.is_dark(x,y) %>
          <td class="black"/>
        <% else %>
          <td class="white"/>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
